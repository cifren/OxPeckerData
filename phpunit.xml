            lowUpperBound="35"
            highLowerBound="70"
            showUncoveredFiles="true"
        />
        <log type="testdox-html" target="./build/logs/testdox.html" />
        <log type="coverage-clover" target="./build/logs/clover.xml"/>
    </logging-->
</phpunit>
